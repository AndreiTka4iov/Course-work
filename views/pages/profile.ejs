<div class="page-user">
    <div class="user-info">
        <div class="nav-page">
            <div class="href-page">
                <a href="/profile/news" class="news-a">
                    <svg>
                        <use xlink:href="/main.svg#news-svg"></use>
                    </svg>
                    <div class="a-page">Your news</div>
                </a>
                <a href="/profile/questions" class="forum-a">
                    <svg>
                        <use xlink:href="/main.svg#forum-svg"></use>
                    </svg>
                    <div class="a-page">Your questions</div>
                </a>
                <a href="/" class="settings-a">
                    <svg>
                        <use xlink:href="/main.svg#settings-svg"></use>
                    </svg>
                    <div class="a-page">Your settings</div>
                </a>
                <% if (locals.level != 0){ %>
                    <a href="/" class="">
                        <svg>
                            <use xlink:href="/main.svg#report-svg"></use>
                        </svg>
                        <div class="a-page">Reports</div>
                    </a>
                <% } %>
            </div>
        </div>
        <div class="user-data">
            <div class="avatar">
                <img src="/images/user.svg" alt="">
            </div>
            <span><%= locals.login %></span>
        </div>
        <div class="user-activity">
            <% if (locals.href == 'news') {%>
                <div class="activity-screen news">
                    <% /* %>
                    <div class="clear">
                        <svg>
                            <use xlink:href="/main.svg#news-svg"></use>
                        </svg>
                        <span>The list is empty</span>
                    </div>
                    <% */ %>
                    <div class="news-item">
                        <div class="img-block">
                            <img src="/images/news/major.jpg" alt="">
                            <div class="dark-img"></div>
                            <a href="">CS:GO</a>
                            <h3>IEM Rio Major 2022</h3>
                        </div>  
                        <div class="text-block">
                            <a href="/news/item?">OUTSIDERS QUALIFY FOR BLAST PREMIER WORLD FINAL</a><br><br>
                            <div>The newly crowned Major champions will head to Abu Dhabi in December. <br> <br>
                
                                Following their underdog run all the way to the trophy at the IEM Rio Major, Outsiders have qualified for the $1,000,000, eight-team BLAST Premier World Final. They will head out to Abu Dhabi for the season-ending spectacle, which takes place December 14-18.</div>
                        </div>  
                        <div class="info-block">
                            <div class="date">17.11.2022</div>
                            <div class="info">
                                <svg>
                                    <use xlink:href="/main.svg#yey-svg"></use>
                                </svg>
                                <span>0</span>
                            </div>
                            <div class="info">
                                <svg>
                                    <use xlink:href="/main.svg#forum-svg"></use>
                                </svg>
                                <span>1</span>
                            </div>
                            <div class="info">
                                <svg class="favorite">
                                    <use xlink:href="/main.svg#favorite-svg"></use>
                                </svg>
                                <span>10</span>
                            </div>
                            <a href="/news/item?">Delete</a>
                        </div>
                    </div>
                    <a href="/create" class="add">Add news</a>
                </div>
                
            <%} else if ((locals.href == 'questions')){%>
                <div class="activity-screen questions">
                    <% if (locals.userPosts.length == 0) {%>
                    <div class="clear">
                        <svg>
                            <use xlink:href="/main.svg#forum-svg"></use>
                        </svg>
                        <span>The list is empty</span>
                    </div>
                    <%} else {
                        for(var i=0; i<locals.userPosts.length; i++) {
                            let categoryName = locals.category.find(item => item.id == locals.userPosts[i].subcategory);
                            %>
                        <div class="block-discussion">
                            <div class="upper-block">
                                <div class="info-block">
                                    <div class="info">
                                        <svg>
                                            <use xlink:href="/main.svg#yey-svg"></use>
                                        </svg>
                                        <span><%= locals.userPosts[i].watching%></span>
                                    </div>
                                    <div class="info">
                                        <svg>
                                            <use xlink:href="/main.svg#forum-svg"></use>
                                        </svg>
                                        <span><%= locals.userPosts[i].coments%></span>
                                    </div>
                                    <div class="info">
                                        <svg class="favorite">
                                            <use xlink:href="/main.svg#favorite-svg"></use>
                                        </svg>
                                        <span><%= locals.userPosts[i].favorite%></span>
                                    </div>
                                </div>
                                <div class="text-block">
                                    <a href="/forum/item?id=<%= locals.userPosts[i].id%>"><%= locals.userPosts[i].title%></a><br>
                                    <pre><%= locals.userPosts[i].discussion%></pre>
                                </div> 
                                <span class="del" id="<%= locals.userPosts[i].id%>" onclick="deleteBlock(this)">
                                    <svg>
                                        <use xlink:href="/main.svg#delete-svg"></use>
                                    </svg>
                                </span>
                            </div>
                            <div class="topic-block">
                                <a href="/forum/?<%= locals.userPosts[i].subcategory%>">
                                    <div class="topic"><%= categoryName.category%></div>
                                </a>                                
                            </div>
                        </div>
                    <%}}%>
                    <a href="/create" class="add">Add questions</a>
                </div>
            <%}%>
        </div>
    </div>
</div>
<script>
    if (document.querySelector('.news')) {
        document.querySelector('.news-a').classList.add('active')
    } else if (document.querySelector('.questions')){
        document.querySelector('.forum-a').classList.add('active')
    }
</script>