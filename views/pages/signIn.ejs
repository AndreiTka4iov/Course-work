<form class="sign-in" method="POST">
    <div class="logo-block">
        <a href="/">
            <svg>
                <use xlink:href="/main.svg#logo-svg"></use>
            </svg>
        </a>
    </div>
    <div class="description">
        <h3>Your login or email:</h3>
        <input type="text" name="login" placeholder="Enter login or email...">
        <h3>Your password:</h3>
        <div class="pass">
            <input type="password" name="password" class="pass" placeholder="Enter password...">
            <span onclick="showPassword(this)">
                <svg>
                    <use xlink:href="/main.svg#yey-svg"></use>
                </svg>
            </span>
        </div>
    </div>
    <button class="accept">Sign in</button>
</form>