
<form action="" class="sign-up">
    <div class="close-line">
        <span onclick="closeSigUp(this)">
            <svg>
                <use xlink:href="/main.svg#close-svg"></use>
            </svg>
        </span>
    </div>
    <div class="logo-block">
        <a href="/">
            <svg>
                <use xlink:href="/main.svg#logo-svg"></use>
            </svg>
        </a>
    </div>
    <div class="description">
        <h3>Your login:</h3>
        <input type="text" placeholder="Enter login...">
        <h3>Your email:</h3>
        <input type="email" placeholder="Enter email...">
        <h3>Your password:</h3>
        <div class="pass">
            <input type="password" name="" id="" class="pass" placeholder="Enter password...">
            <span onclick="showPassword(this)">
                <svg>
                    <use xlink:href="/main.svg#yey-svg"></use>
                </svg>
            </span>
        </div>
        <h3>Your password again:</h3>
        <div class="pass">
            <input type="password" name="" id="" class="pass" placeholder="Enter password again...">
            <span onclick="showPassword(this)">
                <svg>
                    <use xlink:href="/main.svg#yey-svg"></use>
                </svg>
            </span>
        </div>
    </div>
    <button class="accept">Sign up</button>
</form>