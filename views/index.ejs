<%- include('header-template', { title: locals.title, activeHeader: locals.activeHeader, headLink: locals.headLink, homePage: locals.homePage, token: locals.token}) %>

<%
switch(locals.page) { 
    case 'Home': %>
    <%- include('pages/home') %>
    <% break;

    case 'News': %>
    <%- include('pages/components/topics') %>
    <%- include('pages/news') %>
    <% break;

    case 'NewsItem': %>
    <%- include('pages/newsItem') %>
    <% break;

    case 'Forum': %>
    <%- include('pages/components/topics') %>
    <%- include('pages/forum') %>
    <% break;

    case 'ForumItem': %>
    <%- include('pages/forumItem') %>
    <% break;

    case 'signUp': %>
    <%- include('pages/signUp') %>
    <% break;

    case 'signIn': %>
    <%- include('pages/signIn') %>
    <% break;

    case 'Error': %>
    <%- include('pages/error') %>
    <% break;

    default: %>
    <%- include('pages/error') %>
    <% break;
} %>

<%- include('footer-template') %>
<%- include('pages/components/blure-screen') %>